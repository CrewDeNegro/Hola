<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentAcercadeldesarrollador">

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_weight="1.3">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_menu_acerca_del_desarrollador" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="italic"
            android:layout_weight="2"
            android:text="SmartClass en una App independiente, destinada principalmente a los estudiantes que tanto requieren organizar su tiempo. Su desarrollador, Paulino Acuña, insentiva al optimo aprovechamiento de la tecnología para brindar comodidad en la organización de nuestras actividades diarias.


¡DISFRUTALA MI AMIGO!!  ;)" />






</LinearLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_weight="1">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_info" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="italic"
            android:layout_weight="2"
            android:text="Apoyame con tu calificación en Google Play Store, y no olvides dejar tu comentario.

Estamos trabajando en futuras Actualizaciones para mejorar tu experiencia." />





    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.4">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_weight="2"
            android:text="Brindada al Colegio San Benito De Tibatí" />




    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@android:color/background_light"
        android:layout_weight="0.5">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcherrtc" />
    </LinearLayout>
</LinearLayout>
