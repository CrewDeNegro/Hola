<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorbackgrounda"
    tools:context="com.colombianapps.paulino.proyectosmartclass.RegistroAsignaturas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <ImageView
        android:id="@+id/registro_asignaturas_imagen"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_weight="0.4"
        android:paddingTop="5dp"
        android:layout_marginTop="40sp"
        android:tint="@color/colorAccent"
        android:src="@drawable/ic_menu_asignaturas"
        android:layout_height="0dp"
        />

    <TextView
        android:id="@+id/Agrega_Tu_Asignatura"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:layout_weight="0.25"
        android:layout_marginTop="10sp"
        android:layout_height="0dp"
        android:text="Agrega Tus Materias" />

    <TextView
        android:id="@+id/nombre_asignatura"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_weight="0.1"
        android:textSize="@dimen/subtitulos_predeterminados"
        android:layout_height="0dp"
        android:text="Nombre de la Asignatura:" />
    <EditText
        android:id="@+id/campoasignatura"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:hint="Ej: Biología"
        android:layout_marginBottom="28dp"
        android:text="" />
    <TextView
        android:id="@+id/Abrev_asignatura"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_width="match_parent"
        android:layout_weight="0.1"
        android:textSize="@dimen/subtitulos_predeterminados"
        android:layout_height="0dp"
        android:text="Abreviatura:" />

    <EditText
        android:id="@+id/camponickname"
        android:layout_width="wrap_content"
        android:layout_weight="0.2"
        android:layout_height="0dp"
        android:hint="Ej: la abreviatura de Biología es Bio"
        android:text="" />

    <TextView
        android:id="@+id/profesor_asig"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_width="match_parent"
        android:layout_weight="0.1"
        android:textSize="@dimen/subtitulos_predeterminados"
        android:layout_height="0dp"
        android:text="Maestro(a):" />

    <EditText
        android:id="@+id/campo_profesor"
        android:layout_width="wrap_content"
        android:layout_weight="0.2"
        android:layout_height="0dp"
        android:hint="Ej: Felipe Forero"
        android:text="" />
    <Button
        android:id="@+id/guardar_datos"
        android:layout_width="match_parent"
        android:onClick="onClick"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:layout_weight="0.3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Guardar Asignatura" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
